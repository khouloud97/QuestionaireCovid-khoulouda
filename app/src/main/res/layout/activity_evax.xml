<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/q2"
    tools:context=".Evax">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#79F4E4EA"
            android:text="eVAX   هو نتيجة عمل والتزام وطني مشترك من طرف المركز الوطني للإعلامية، الهيئة العليا المستقلة للانتخابات، مركز الإعلاميّة لوزارة الصحّة، الوكالة الوطنية للسلامة المعلوماتية، مشغّلي الاتصالات (إتّصالات تونس، أوريدو و أورانج)، وزارة الصحّة و وزارة تكنولوجيات الإتّصال. "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سجل ليك و للعزيز عليك"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/evax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#75DDE8EA"
            android:text="Button"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/click" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>