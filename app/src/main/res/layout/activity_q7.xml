<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"     android:background="@drawable/qqqqqqqqqqqq"

    tools:context=".Q7" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="113dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prenez-vous un traitement immunosuppresseur ? C’est un traitement qui diminue vos défenses contre les infections. Voici quelques exemples : corticoïdes, méthotrexate, ciclosporine, tacrolimus, azathioprine, cyclophosphamide (liste non exhaustive)."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radio">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="OUI"
                android:textColor="#461D36"
                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="NON"
                android:textColor="#461D36"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_s1"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:text="Suivant"      android:background="#81A1BEE2"
                android:textColor="#FA090808" />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>